<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.woltest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wake On Lan"/>

    <EditText
        android:id="@+id/ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="please input ip"
        android:text="192.168.1.104"/>

    <EditText
        android:id="@+id/mac_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="please input mac"
        android:text="38-D5-47-AA-CF-91"/>

    <EditText
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="please input port"
        android:text="7878"/>

    <Button
        android:id="@+id/wake_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:text="wake"/>
</LinearLayout>
